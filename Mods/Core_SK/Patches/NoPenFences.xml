<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Fence"]/building/isFence</xpath>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Fence"]/passability</xpath>
		<value>
			<passability>Impassable</passability>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Fence"]/fillPercent</xpath>
		<value>
			<fillPercent>0.5</fillPercent>
		</value>
	</Operation>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Ideology</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>

		<li Class="PatchOperationRemove">
			<xpath>Defs/ThingDef[defName="AncientFence"]/building/isFence</xpath>
		</li>

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="AncientFence"]/passability</xpath>
			<value>
				<passability>Impassable</passability>
			</value>
		</li>
  
		</operations>
	</match>
	</Operation>

</Patch>